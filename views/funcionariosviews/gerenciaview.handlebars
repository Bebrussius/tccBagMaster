<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="box-header-equipamento mb-4">
        <h2 class="text-md mb-4">Bem-vindo à seção de Funcionários!</h2>
        <a href="/usuarioroutes/exibirinclusaoroute">
          <button class="btn btn-primary">Incluir funcionário</button>
        </a>
      </div>
    </div>
  </div>

  <div class="row">
    {{#each usuarios}}
    <div class="col-md-6 col-lg-4">
      <!-- Use col-md-6 para telas médias e col-lg-4 para telas grandes -->
      <div class="box-header-equipamento mb-4">
        <div class="card">
          <div class="card-body">
            <h4>{{nome}}</h4>
            <p>Telefone: {{telefone}}</p>
            <p>Email: {{email}}</p>
            <p>Senha: {{senha}}</p>
            <p>Função: {{funcao}}</p>

            <a href="/usuarioroutes/alteracaoroute/{{id}}">
              <button class="btn mt-4 w-100" style="background-color: #020060; color: #ffffff;">Alterar funcionário</button>
            </a>
            <form action="/usuarioroutes/excluirroute" method="POST">
              <input type="hidden" name="id" value="{{id}}">
              <button type="submit" class="btn btn-dark mt-2 w-100">Arquivar funcionário</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{else}}
    <h4 class="mt-3" id="nenhumEquipamentoh4">Nenhum funcionário cadastrado!</h4>
    {{/each}}
  </div>
</div>