<div class="box-header-equipamento mb-4">
  <h2>
    Bem-vindo a seção de Funcionários!
  </h2>
  <a href="/usuarioroutes/exibirinclusaoroute"><button class="btn btn-success">Incluir funcionário</button></a>
</div>
{{#each usuarios}}
<div class="box-header-equipamento mb-4">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>Telefone: {{telefone}}</small>
    <br>
    <small>Email: {{email}}</small>
    <br>
    <small>Senha: {{senha}}</small>
    <br>
    <a href="/equipamentoroutes/alteracaoroute/{{id}}"><button class="btn btn-success mt-4">Alterar funcionário</button></a>
    <form action="/equipamentoroutes/excluirroute" method="POST">
      <input type="hidden" name="id" value="{{id}}">
      <button type="submit" class="btn btn-danger mt-2">Arquivar funcionário</button>
    </form>
  </div>
</div>
{{else}}
<h4 class="mt-3" id="nenhumEquipamentoh4">Nenhuma funcionário cadastrado!</h4>
{{/each}}