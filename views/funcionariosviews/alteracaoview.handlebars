<div class="container mt-4">
  <div class="box-header-equipamento">
    <div class="card-body" style="background-color: white;">
      <h3 class="mt-3 text-center">Alteração de funcionário</h3>
      <form action="/usuarioroutes/alterarroute" method="POST">
      <div class="row">
        <div class="col-8 mx-auto">
        <input type="hidden" name="id" value="{{usuarios.id}}">
        <div class="form-group">
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome" placeholder="Nome do funcionário" class="form-control" value="{{usuarios.nome}}" style="background-color: #D5D5D5;">
        </div>
        <div class="form-group">
          <label for="telefone">Telefone:</label>
          <input type="text" id="telefone" name="telefone" placeholder="Telefone do funcionário" class="form-control" value="{{usuarios.telefone}}" style="background-color: #D5D5D5;">
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name "email" placeholder="Email do funcionário" class="form-control" value="{{usuarios.email}}" style="background-color: #D5D5D5;">
        </div>
        <div class="form-group">
          <label for="senha">Senha:</label>
          <input type="text" id="senha" name="senha" placeholder="Senha do funcionário" class="form-control" value="{{usuarios.senha}}" style="background-color: #D5D5D5;">
        </div>
        <div class="form-group">
          <label for="funcao">Função:</label>
          <select id="funcao" name="funcao" class="form-control" style="background-color: #D5D5D5;">
            <option value="Administrador" {{#if (eq usuarios.funcao "Administrador")}}selected{{/if}}>Administrador</option>
            <option value="Empresa" {{#if (eq usuarios.funcao "Empresa")}}selected{{/if}}>Função Empresa</option>
            <option value="Pedidos" {{#if (eq usuarios.funcao "Pedidos")}}selected{{/if}}>Função Pedidos</option>
          </select>
        </div>
        <div class="form-group">
            <div class="text-center">
        <button type="submit" class="btn w-100"
                style="background-color: #020060; color: #ffffff;">Alterar funcionário</button>
          </div>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>

  {{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
  {{/each}}