<div class="box-header-equipamento mb-4">
  <div class="card-body" style="background-color: white;">
    <h3 class="mt-3 text-center">Adicionando funcionário</h3>
    <form action="/usuarioroutes/incluirroute" method="POST">
      <div class="row">
        <div class="col-8 mx-auto">
          <div class="form-group">

            <input type="text" id="nome" name="nome" placeholder="Nome do funcionário" class="form-control" style="background-color: #D5D5D5;">
          </div>
          <div class="form-group" >

            <input type="text" id="telefone" name="telefone" placeholder="Numero de telefone do funcionário"
              class="form-control" style="background-color: #D5D5D5;">
          </div>
          <div class="form-group">

            <input type="text" id="email" name="email" placeholder="E-mail do funcionário" class="form-control" style="background-color: #D5D5D5;">
          </div>
          <div class="form-group">

            <input type="text" id="senha" name="senha" placeholder="Senha do funcionário" class="form-control" style="background-color: #D5D5D5;">
          </div>
          <div class="form-group">
            <label for="funcao">Função:</label>
            <select id="funcao" name="funcao" class="form-control" style="background-color: #D5D5D5;">
              <option value="Administrador">Administrador</option>
              <option value="Empresa">Função Empresa</option>
              <option value="Pedidos">Função Pedidos</option>
            </select>
          </div>
          <div class="form-group">
            <div class="text-center">
              <button type="submit" class="btn w-100"
                style="background-color: #020060; color: #ffffff;">Cadastrar</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}
</div>