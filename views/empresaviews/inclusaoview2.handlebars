<div class="box-header-equipamento mb-4">
  <div class="card-body" style="background-color: white;">
    <h3 class="mt-3 text-center">Adicionando empresa - Pessoa Física</h3>
    <form action="/empresaroutes/incluirroute/concluir" method="POST">
      <div class="row">
        <div class="col-8 mx-auto">
          <div class="form-group d-flex flex-column ">

            <input type="text" id="nomePessoa" name="nomePessoa" placeholder="Nome da pessoa" class="form-control "
              style="background-color: #D5D5D5;">
          </div>

          <div class="form-group d-flex flex-column ">

            <input type="text" id="telefonePessoa" name="telefonePessoa" placeholder="Telefone de contato"
              class="form-control " style="background-color: #D5D5D5;">
          </div>

          <div class="form-group d-flex flex-column ">

            <input type="text" id="emailPessoa" name="emailPessoa" placeholder="E-mail de contato" class="form-control "
              style="background-color: #D5D5D5;">
          </div>

          <div class="form-group d-flex flex-column ">

            <input type="text" id="CPF" name="CPF" placeholder="CPF ( XXX.XXX.XXX-YY )" class="form-control "
              style="background-color: #D5D5D5;">
          </div>

          <div class="form-group d-flex flex-column ">

            <input type="text" id="RG" name="RG" placeholder="RG" class="form-control "
              style="background-color: #D5D5D5;">
          </div>

          <div class="form-group d-flex flex-column ">

            <input type="text" id="enderecoPessoa" name="enderecoPessoa" placeholder="Endereço da pessoa"
              class="form-control " style="background-color: #D5D5D5;">
          </div>

          <div class="form-group">
            <div class="text-center">
              <button type="submit" class="btn w-100"
                style="background-color: #020060; color: #ffffff;">Continuar</button>
            </div>
          </div>

        </div>
      </div>
    </form>

  </div>
</div>

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}