<div class="box-header-equipamento mb-4">
  <h2> Bem-vindo a seção de empresas! </h2> <a href="/empresaroutes/exibirinclusaoroute"> <button
      class="btn col-12 btn-lg" style="background-color: #ffffff; color: #000000; height: 15vh; ">Adicionar
      Empresa</button> </a>
</div>
<form action="/empresaroutes" method="GET">
  <input type="checkbox" name="showDesativadas" {{#if showDesativadas}}checked{{/if}}>
  <label for="showDesativadas">Mostrar Desativadas</label>
  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
{{#each empresas}}
<a href="/empresaroutes/empresaDetalhesRoute/{{id}}" class="btn">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{nomeEmpresa}}</h5>
    </div>
</a>
</div> {{else}} <h4 class="mt-3" id="nenhumEquipamentoh4">Nenhuma empresa ativa no momento!</h4> {{/each}}