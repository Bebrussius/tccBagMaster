<div class="box-header-equipamento">
  <div class="card-body" style="background-color: white;">
    <h3>Alteração de equipamento</h3>
    <form action="/empresaroutes/alterarroute" method="POST">
      <input type="hidden" name="id" value="{{empresas.id}}">
      <label for="nome">Nome da empresa:</label>
      <input type="text" id="nomeEmpresa" name="nomeEmpresa" placeholder="Nome da empresa" class="form-control"
        value="{{empresas.nomeEmpresa}}">
      <br>
      <label for="nome">CNPJ:</label>
      <input type="text" id="CNPJ" name="CNPJ" placeholder="CNPJ" class="form-control" value="{{empresas.CNPJ}}">
      <br>
      <label for="nome">CEP:</label>
      <input type="text" id="CEP" name="CEP" placeholder="CEP" class="form-control" value="{{empresas.CEP}}">
      <br>
      <label for="nome">Endereço da empresa:</label>
      <input type="text" id="enderecoEmpresa" name="enderecoEmpresa" placeholder="Endereço da empresa"
        class="form-control" value="{{empresas.enderecoEmpresa}}">
      <br>
      <label for="nome" id="label-file">Telefone:</label>
      <input type="text" id="telefoneEmpresa" name="telefoneEmpresa" placeholder="Telefone de contato da empresa"
        class="form-control" value="{{empresas.telefoneEmpresa}}">
      <br>
      <label for="nome" id="label-file">Email:</label>
      <input type="email" id="emailEmpresa" name="emailEmpresa" placeholder="Email de contato da empresa"
        class="form-control" value="{{empresas.emailEmpresa}}">
      <br>
      <label for="nome" id="label-file">Tipo Jurídico:</label>
      <input type="text" id="tipoJuridicoEmpresa" name="tipoJuridicoEmpresa" placeholder="Tipo jurídico da empresa"
        class="form-control" value="{{empresas.tipoJuridicoEmpresa}}">
      <br>
      <label for="nome">Nome da pessoa:</label>
      <input type="text" id="nomePessoa" name="nomePessoa" placeholder="Nome da pessoa" class="form-control" value="{{empresas.nomePessoa}}">
      <br>
      <label for="nome">Telefone de contato:</label>
      <input type="text" id="telefonePessoa" name="telefonePessoa" placeholder="Telefone de contato"
        class="form-control" value="{{empresas.telefonePessoa}}">
      <br>
      <label for="nome">E-mail de contato:</label>
      <input type="text" id="emailPessoa" name="emailPessoa" placeholder="E-mail de contato" class="form-control" value="{{empresas.emailPessoa}}">
      <br>
      <label for="nome">CPF:</label>
      <input type="text" id="CPF" name="CPF" placeholder="CPF" class="form-control" value="{{empresas.CPF}}">
      <br>
      <label for="nome" id="label-file">RG:</label>
      <input type="text" id="RG" name="RG" placeholder="RG" class="form-control" value="{{empresas.RG}}">
      <br>
      <label for="nome" id="label-file">Endereço:</label>
      <input type="text" id="enderecoPessoa" name="enderecoPessoa" placeholder="Endereço da pessoa"
        class="form-control" value="{{empresas.enderecoPessoa}}">
      <br>
      <button type="submit" class="btn btn-success">Alterar empresa</button>
    </form>
  </div>
</div>

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}