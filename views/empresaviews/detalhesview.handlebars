<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <a href="#" class="btn btn-light" onclick="history.back()">
                        <i class="fas fa-arrow-left fa-lg"></i> Voltar
                    </a>
                    <h4 class="card-title text-center mb-4">{{empresa.nomeEmpresa}}</h4>
                    <hr>

                    <div class="person-section">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-user"></i> Nome da pessoa:</strong> {{empresa.nomePessoa}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-phone"></i> Telefone da pessoa:</strong> {{empresa.telefonePessoa}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-id-card"></i> CPF:</strong> {{empresa.CPF}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="far fa-address-card"></i> RG:</strong> {{empresa.RG}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-map-marker-alt"></i> Endereço da pessoa:</strong> {{empresa.enderecoPessoa}}
                            </li>
                        </ul>
                    </div>
                    <hr>

                    <div class="company-section">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="far fa-building"></i> CNPJ:</strong> {{empresa.CNPJ}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-map-pin"></i> CEP:</strong> {{empresa.CEP}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-building"></i> Endereço da empresa:</strong> {{empresa.enderecoEmpresa}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-phone"></i> Telefone da empresa:</strong> {{empresa.telefoneEmpresa}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="far fa-envelope"></i> Email da empresa:</strong> {{empresa.emailEmpresa}}
                            </li>
                            <li class="list-group-item list-group-item-action">
                                <strong><i class="fas fa-briefcase"></i> Tipo jurídico da empresa:</strong> {{empresa.tipoJuridicoEmpresa}}
                            </li>
                        </ul>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>