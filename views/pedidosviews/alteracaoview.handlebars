<div class="box-header-equipamento">
    <div class="card-body">
        <h3>Alteração de funcionário</h3>
        <form action="/pedidoroutes/alterarroute" method="POST">
            <input type="hidden" name="id" value="{{pedidos.id}}">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome do usuário" class="form-control" value="{{pedidos.nome}}">
            <br>
            <label for="corSacola">Cor da sacola:</label>
            <input type="text" id="corSacola" name="corSacola" placeholder="Cor da sacola" class="form-control" value="{{pedidos.corSacola}}">
            <br>
            <label for="corTinta">Cor da tinta:</label>
            <input type="text" id="corTinta" name="corTinta" placeholder="Cor da tinta" class="form-control" value="{{pedidos.corTinta}}">
            <br>
            <label for="quantidade">Quantidade:</label>
            <input type="text" id="quantidade" name="quantidade" placeholder="Quantidade" class="form-control" value="{{pedidos.quantidade}}">
            <br>
            <label for="tamanho">Tamanho:</label>
            <input type="text" id="tamanho" name="tamanho" placeholder="Tamanho" class="form-control" value="{{pedidos.tamanho}}">
            <br>
            <label for="tipo">Tipo:</label>
            <select id="tipo" name="tipo" class="form-control">
                <option value="plastico" {{#if (eq pedidos.tipo "plastico" )}}selected{{/if}}>Plastico
                </option>
                <option value="pano" {{#if (eq pedidos.tipo "pano" )}}selected{{/if}}>Pano</option>
                <option value="algumacoisa" {{#if (eq pedidos.tipo "algumacoisa" )}}selected{{/if}}>Alguma coisa</option>
            </select>
            <br>
            <label for="preco">Preço:</label>
            <input type="text" id="preco" name="preco" placeholder="Preço" class="form-control" value="{{pedidos.preco}}">
            <br>
            <label for="empresaPedido">Empresa que fez o pedido:</label>
            <input type="text" id="empresaPedido" name="empresaPedido" placeholder="Empresa que fez o pedido"
                class="form-control" value="{{pedidos.empresaPedido}}">
            <br>
            <label for="funcionarioPedido">Funcioario que fez o pedido:</label>
            <input type="text" id="funcionarioPedido" name="funcionarioPedido"
                placeholder="Funcionario que fez o pedido" class="form-control" value="{{pedidos.funcionarioPedido}}">
            <br>
            <button type="submit" class="btn btn-success">Alterar funcionário</button>
        </form>
    </div>
</div>

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}