<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="box-header-equipamento mb-4">
    <div class="card-body" style="background-color: white; text-align: center;">
        <h3>Adicionando pedido</h3>
        <form action="/pedidoroutes/incluirroute/pedido" method="POST" class="text-left">
            
            <div class="form-group">
                <input type="text" id="nome" name="nome" placeholder="Nome do pedido" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
            </div>
            
            <div class="form-group">
                <input type="text" id="corSacola" name="corSacola" placeholder="Cor da sacola" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
            </div>
            
            <div class="form-group">
                <input type="text" id="corTinta" name="corTinta" placeholder="Cor da tinta" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
            </div>
            
            <div class="form-group">
                <input type="text" id="quantidade" name="quantidade" placeholder="Quantidade" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
            </div>
            
            <div class="form-group">
                <input type="text" id="tamanho" name="tamanho" placeholder="Tamanho" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
            </div>
            
            <div class="form-group">
                <select id="tipo" name="tipo" class="form-control col-8 mx-auto"style="background-color: #D5D5D5;">
                    <option value="plastico">Plastico</option>
                    <option value="pano">Tecido</option>
                    <option value="pano">Papel</option>
                    <option value="algumacoisa">outro</option>
                </select>
            </div>
            
            <div class="form-group">
                <select id="impressao" name="impressao" class="form-control col-8 mx-auto" style="background-color: #D5D5D5;">
                    <option value="Um lado">Um lado</option>
                    <option value="Dois lados">Dois lados</option>
                </select>
            </div>
            
          <div class="form-group">
                <div class="text-center"> 
                    <button type="submit" class="btn col-8 mx-auto" style="background-color: #020060; color: #ffffff;">Continuar</button>
                </div>
            </div>
        </form>
    </div>
</div>
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}
